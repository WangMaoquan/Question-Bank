{
  "name": "question-bank",
  "version": "1.0.0",
  "private": true,
  "description": "Community-driven question bank platform",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:backend": "pnpm --filter @question-bank/backend start:dev",
    "dev:frontend": "pnpm --filter @question-bank/frontend dev",
    "dev:admin": "pnpm --filter @question-bank/admin dev",
    "build": "pnpm -r build",
    "build:backend": "pnpm --filter @question-bank/backend build",
    "build:frontend": "pnpm --filter @question-bank/frontend build",
    "build:admin": "pnpm --filter @question-bank/admin build",
    "test": "pnpm -r test",
    "lint": "eslint . --ext .ts,.tsx,.vue",
    "lint:fix": "eslint . --ext .ts,.tsx,.vue --fix",
    "format": "prettier --write \"**/*.{ts,tsx,vue,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,vue,js,json,md}\"",
    "typecheck": "pnpm -r --parallel run typecheck",
    "clean": "pnpm -r exec rm -rf dist node_modules && rm -rf node_modules",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "question-bank",
    "education",
    "community"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.7.0",
    "prettier": "^3.7.4",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
